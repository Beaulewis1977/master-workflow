{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude Settings",
  "type": "object",
  "properties": {
    "dangerouslySkipPermissions": { "type": "boolean" },
    "autoSave": { "type": "boolean" },
    "maxConcurrentTools": { "type": "number", "minimum": 1 },
    "defaultMcpServer": { "type": "string" },
    "autoDelegation": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "rules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "when": { "type": "object" },
              "delegateTo": { "type": "string" },
              "confidenceThreshold": { "type": "number", "minimum": 0, "maximum": 1 }
            },
            "required": ["id", "when", "delegateTo"]
          }
        }
      },
      "required": ["enabled", "rules"]
    }
  },
  "required": ["dangerouslySkipPermissions", "autoSave", "maxConcurrentTools", "defaultMcpServer"]
}


